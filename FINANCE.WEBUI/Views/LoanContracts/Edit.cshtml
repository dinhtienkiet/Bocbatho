@model FINANCE.CORE.Models.LoanContract

@{
    ViewData["Title"] = "Edit";
}
@if(ViewData["EditError"] != null)
{
    <script>
        alert("Error");
    </script>
}
<h1>Edit</h1>

<h4>LoanContract</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" asp-controller="LoanContracts">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="BorrowerID" class="control-label">Người Vay</label>
                <select asp-for="BorrowerID" class="form-control" asp-items="ViewBag.BorrowerID"></select>
                <span asp-validation-for="BorrowerID" class="text-danger"></span>
            </div>
            <input type="hidden" asp-for="ContractID" />
            <div class="form-group">
                <label asp-for="LoanPackage" class="control-label">Gói Vay</label>
                <select asp-for="LoanPackage" class="form-control">
                    <option value="0">Dài hạn</option>
                    <option value="1">Ngắn hạn</option>
                </select>
                <span asp-validation-for="LoanPackage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterestRate" class="control-label">Phần Trăm Lãi</label>
                <input asp-for="InterestRate"type="number" step="0.01" class="form-control" required />
                <span asp-validation-for="InterestRate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Amount" class="control-label">Tiền Vay</label>
                <input asp-for="Amount"type="number" step="0.01" class="form-control" required/>
                <span asp-validation-for="Amount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ContractSignDate" class="control-label">Ngày Tạo Hợp Đồng</label>
                <input asp-for="ContractSignDate" class="form-control" type="date"required/>
                <span asp-validation-for="ContractSignDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ExpireDate" class="control-label">Ngày Hết Hạn</label>
                <input asp-for="ExpireDate" class="form-control" type="date" required/>
                <span asp-validation-for="ExpireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterestPayDate" class="control-label">Tiền Lãi Kỳ Này</label>
                <input asp-for="InterestPayDate"type="number" step="0.01" class="form-control"required />
                <span asp-validation-for="InterestPayDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="InterestInDebt" class="control-label">Tiền Lãi Chưa Đóng</label>
                <input asp-for="InterestInDebt"type="number" step="0.01" class="form-control" required/>
                <span asp-validation-for="InterestInDebt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Trạng Thái</label>
                <select asp-for="Status" class="form-control">
                    <option value="0">ENOUGH</option>
                    <option value="1">OWED</option>
                    <option value="2">OVERDUE</option>
                    <option value="3">CLOSED</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label">Ghi Chú</label>
                <input asp-for="Note" class="form-control" />
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
