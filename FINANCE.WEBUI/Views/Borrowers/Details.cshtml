@model FINANCE.CORE.Models.Borrower

@{
    ViewData["Title"] = "Details";
    var status = Model.Status;
}

        <div class="row" >
            <div class="col-lg-10" style="left: 8%">
                <div class="card">
                    <div class="card-header bg-info" >
                        <h2 class="m-b-0 text-white" style="text-align:center"> CHI TIẾT THÔNG TIN NGƯỜI VAY HỌ</h2>
                    </div>
                    <form action="#">
                        <div class="card-body">

                        </div>
                        <hr>
                        <div class="form-body">
                            <div class="card-body">
                                <div class="row p-t-20">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">HỌ TÊN</label>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.Name)
                                            </dd>

                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group has-danger">
                                            <label class="control-label">NGÀY SINH</label>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.DoB)
                                            </dd>

                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>
                                <!--/row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group has-success">
                                            <label class="control-label">SỐ ĐIỆN THOẠI</label>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.PhoneNumber)
                                            </dd>

                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">SỐ CMT</label>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.IdCardNumber)
                                            </dd>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>

                                <!--/row-->
                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">ĐỊA CHỈ</label>
                                            <dd class="col-sm-10">
                                                @Html.DisplayFor(model => model.Address)
                                            </dd>
                                        </div>
                                    </div>
                                    <!--/span-->
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label class="control-label">TRẠNG THÁI</label>
                                            <dd class="col-sm-10">
                                                @if (status == 0)
                                                {
                                                    <span class="label label-warning">Nợ xấu</span>
                                                }
                                                else if (status == 1)
                                                {
                                                    <span class="label label-success">Đúng hạn</span>
                                                }
                                            </dd>
                                        </div>
                                    </div>
                                    <!--/span-->
                                </div>


                            </div>

                            <div class="form-actions">
                                <div class="card-body">
                                    <a class="btn btn-default" asp-action="Edit" asp-route-id="@Model.BorrowerID">CHỈNH SỬA</a>
                                    <a class="btn btn-success" asp-action="Index">TRỞ LẠI</a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
   