@model IEnumerable<FINANCE.CORE.Models.ContributionTransactionHistory>

@{
    ViewData["Title"] = "Lịch sử góp vốn";
}

<h1>Lịch sử góp vốn</h1>

<p>
    <a href="@Url.Action("Create","ContributionTransactionHistories")">Tạo mới</a>
</p>
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body">

                <div class="table-responsive">

                    <table id="zero_config" class="table table-striped table-bordered">
                        <thead>
                            <tr>
                                <th>
                                    Số phiếu
                                </th>
                                <th>
                                    Người thực hiện
                                </th>
                                <th>
                                    Mã hợp đồng thanh toán
                                </th>
                                <th>
                                    Loại phiếu
                                </th>
                                <th>
                                    Số tiền
                                </th>
                                <th>
                                    Ngày lập phiếu
                                </th>
                                <th>
                                    Ghi chú
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContractID)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.User.Username)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContributionContractID)
                                </td>
                                <td>
                                    @if (item.Type == 0)
                                    {
                                        <span class="label label-success">Thu</span>
                                    }
                                    else if (item.Type == 1)
                                    {
                                        <span class="label label-danger">Chi</span>
                                    }
                                    else
                                    {
                                        <span class="label label-warning">NULL</span>
                                    }
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Amount)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ContractSignDate)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Note)
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.ContractID">Chỉnh sửa</a> | 
                                    <a asp-action="Details" asp-route-id="@item.ContractID">Chi tiết</a> | 
                                    <a asp-action="Delete" asp-route-id="@item.ContractID" onclick="return btDelete()">Xóa bỏ</a>
                                </td>
                            </tr>
                            }
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<script>
     function btDelete() {
        return (confirm('Bạn có muốn xóa bỏ lịch sử này không?'));
    }
</script>
